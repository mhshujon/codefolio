---
const projects = [
  {
    title: "E-commerce Platform",
    description: "Built a scalable e-commerce platform using React, Node.js, and MongoDB. Implemented real-time inventory management and payment processing.",
    tech: ["React", "Node.js", "MongoDB", "Redux", "Stripe"],
    link: "#"
  },
  {
    title: "Analytics Dashboard",
    description: "Developed a real-time analytics dashboard with advanced data visualization. Improved decision-making process for clients by 40%.",
    tech: ["Vue.js", "D3.js", "Express", "PostgreSQL"],
    link: "#"
  },
  {
    title: "Mobile App",
    description: "Created a cross-platform mobile app for task management. Achieved 100K+ downloads with 4.8/5 rating on app stores.",
    tech: ["React Native", "Firebase", "TypeScript"],
    link: "#"
  }
];
---

<section class="py-20 bg-gray-50" id="projects">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-heading font-bold text-center mb-12" data-aos="fade-up">
      Featured Projects
    </h2>
    <div class="max-w-4xl mx-auto space-y-8">
      {projects.map((project, index) => (
        <div
          class="bg-white rounded-lg p-8 shadow-sm hover:shadow-md transition-all"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <h3 class="text-2xl font-bold text-secondary mb-3">{project.title}</h3>
          <p class="text-gray-600 mb-4">{project.description}</p>
          <div class="flex flex-wrap gap-2 mb-4">
            {project.tech.map((tech) => (
              <span class="px-3 py-1 bg-primary/10 text-primary rounded-full text-sm">
                {tech}
              </span>
            ))}
          </div>
          <a
            href={project.link}
            class="inline-flex items-center text-primary hover:text-primary/80 transition-colors"
          >
            View Project
            <svg
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"
              ></path>
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>