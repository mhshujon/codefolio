---
interface Props {
  title: string;
  skills: string[];
  index: number;
}

const { title, skills, index } = Astro.props;
---

<div
  class="p-6 bg-gray-50 rounded-lg shadow-sm hover:shadow-md transition-shadow"
  data-aos="fade-up"
  data-aos-delay={index * 100}
>
  <h3 class="text-xl font-bold text-primary mb-4">{title}</h3>
  <ul class="space-y-2">
    {skills.map((skill) => (
      <li class="flex items-center">
        <svg
          class="w-5 h-5 text-primary mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 13l4 4L19 7"
          ></path>
        </svg>
        {skill}
      </li>
    ))}
  </ul>
</div>