---
const skills = {
  "Frontend": {
    icon: "🎨",
    skills: ["React", "TypeScript", "Next.js", "Tailwind CSS", "Redux"]
  },
  "Backend": {
    icon: "⚙️",
    skills: ["Node.js", "Express", "Python", "Django", "RESTful APIs"]
  },
  "Database & Cloud": {
    icon: "☁️",
    skills: ["PostgreSQL", "MongoDB", "AWS", "Docker", "Kubernetes"]
  },
  "Architecture": {
    icon: "🏗️",
    skills: ["Microservices", "System Design", "Design Patterns", "CI/CD"]
  }
};
---

<section class="py-20 bg-white" id="skills">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-heading font-bold text-center mb-12" data-aos="fade-up">
      Skills & Expertise
    </h2>
    <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
      {Object.entries(skills).map(([category, { icon, skills }], index) => (
        <div
          class="bg-gray-50 rounded-xl p-6 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="flex items-center gap-3 mb-4">
            <span class="text-2xl">{icon}</span>
            <h3 class="text-xl font-bold text-secondary">{category}</h3>
          </div>
          <div class="flex flex-wrap gap-2">
            {skills.map((skill) => (
              <span class="px-4 py-2 bg-white text-primary rounded-lg text-sm font-medium shadow-sm">
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>