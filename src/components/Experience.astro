---
const experiences = [
  {
    title: "Senior Software Engineer",
    company: "Tech Company",
    period: "2022 - Present",
    description: "Led development of multiple high-impact projects, mentored junior developers, and implemented best practices.",
  },
  {
    title: "Software Engineer",
    company: "Innovation Labs",
    period: "2020 - 2022",
    description: "Developed scalable solutions, collaborated with cross-functional teams, and improved system performance.",
  },
  {
    title: "Junior Software Engineer",
    company: "Digital Solutions",
    period: "2019 - 2020",
    description: "Built and maintained web applications, participated in code reviews, and contributed to team success.",
  },
];
---

<section class="py-20 bg-white" id="experience">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-heading font-bold text-center mb-12" data-aos="fade-up">
      Professional Experience
    </h2>
    <div class="max-w-4xl mx-auto">
      {experiences.map((exp, index) => (
        <div
          class="mb-8 relative pl-8 border-l-2 border-primary"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class="absolute w-4 h-4 bg-primary rounded-full -left-[9px] top-0"></div>
          <h3 class="text-xl font-bold text-secondary">{exp.title}</h3>
          <p class="text-primary font-semibold">{exp.company}</p>
          <p class="text-gray-500 text-sm mb-2">{exp.period}</p>
          <p class="text-gray-600">{exp.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>